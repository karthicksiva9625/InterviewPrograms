package com.number.programs;

public class ReverseNo {

	public static void main(String[] args) {

		int n = 454, rev = 0;

		int rem = 0;
		for (int i = 1; i <= 3; i++) {
			rem = n % 10;
			rev = rev * 10 + rem;
			n = n / 10;
		}
		System.out.println(rev);

		if (rev == n) {
			System.out.println("Palindrome");
		} else {
			System.out.println("Not a Palindrome");
		}

	}
}